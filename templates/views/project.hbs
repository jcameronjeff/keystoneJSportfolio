<div class="container">
  <div class="row">
      <div class="col-md-12 col-lg-12">
        <article>
          <p><a href="/projects">&larr; Back to projects</a></p>
          <header>
            <h1>{{data.project.title}}</h1>
          </header>
          <div class="row">
            <div class="col-md-6 col-lg-6">
              {{#if data.project.image}}
                <img src="{{cloudinaryUrl data.project.image crop=
                'fit'}}" class="img-responsive">
              {{/if}}
            </div>
            <div class="col-md-6 col-lg-6">
            <ul class="list-group">
              <li class="list-group-item"><strong>Summary: </strong>{{data.project.content.brief}}</li>
            </ul>
            <div class="well">
              {{data.project.content.extended}}
            </div>
            <a class="btn btn-success btn-block" href="/contact">Ask about this Project</a>
          </div>
        </div>
        </article>
      </div>
  </div>
</div>
